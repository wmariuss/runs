[Unit]
Description=Execute any command and send the output to web services
Documentation=https://github.com/wmariuss/runs.git
After=network.target

[Service]
User=mariuss
Group=romariussot
Type=simple
ExecStart=pipenv run bash start.sh
ExecReload=/bin/kill -HUP $MAINPID
Restart=always
TimeoutStopSec=20s
SendSIGKILL=no

[Install]
WantedBy=multi-user.target
